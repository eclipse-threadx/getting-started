{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MXCHIP: Local OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32F412RG",
            "runToMain": true,
            "executable": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "svdFile": "${workspaceFolder}/STM32F412.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32f4discovery.cfg"
            ]
        },
        {
            "name": "MXCHIP: Remote",
            "type": "cortex-debug",
            "executable": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:device.host}",
            "runToMain": true,
            "svdFile": "${workspaceFolder}/STM32F412.svd",
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "debugServerPath": "openocd",
            "debugServerArgs": "-f board/stm32f4discovery.cfg",
            "serverStarted": "Listening on port .* for gdb connections",
            "filterStderr": true,
            "stopAtConnect": true,
            "hardwareBreakpoints": {
                "require": true,
                "limit": 6
            },
            "preLaunchTask": "Flash",
            "svdPath": "${workspaceFolder}/STM32F412.svd"
        }
    ],
    "inputs": [
        {
            "id": "device.host",
            "type": "promptString",
            "default": "host.docker.internal:3333",
            "description": "The local hostname with port for GDB to connect to"
        }
    ]
}