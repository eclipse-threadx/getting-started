{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash",
            "type": "shell",
            "command": "openocd -f board/stm32f4discovery.cfg -c \"program build/app/mxchip_azure_iot.elf verify\" -c \"reset halt\" -c shutdown",
            "windows": {
                "options": {
                  "shell": {
                      "executable": "cmd.exe",
                      "args": ["/c"]
                  }
                }
              },  
            "problemMatcher": [],
            "dependsOn": [ "Build" ]
        },
        {
            "type": "cmake",
            "label": "Build",
            "command": "build",
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
        }
    ]
}
